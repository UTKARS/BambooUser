<%= form_for :user, url: bamboo_user.login_path do |f| %>
    <%= f.text_field :email %>
    <%= f.password_field :password %>
    <% if show_remember_me %>
        <%= check_box_tag(:remember_me, 1, true) %>
        <%= label_tag :remember_me, 'Keep me signed in' %>
    <% end %>
    <%= f.submit 'login' %>
<% end %>
<%= link_to('Forget password', bamboo_user.reset_password_path) if show_forgot_password %>