This is a login screen
<%= form_for :user, url: login_path do |f| %>
    <%= f.text_field :email %>
    <%= f.password_field :password %>
    <%= check_box_tag :remember_me, 1, true %>
    <%= label_tag :remember_me, 'Keep me signed in' %>
    <%= f.submit 'login' %>
<% end %>
<%= link_to 'Forget password', reset_password_path %>