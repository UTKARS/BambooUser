<div class="form invitation_signup_form">
  <%= invitation_signup_form do |f| %>
      <div class="row">
        <% if show_label %>
            <div class="col lbl"><%= f.label :email %></div>
        <% end %>
        <div class="col"><%= f.email_field :email, autofocus: true %></div>
        <div class="clearfix"></div>
      </div>
      <div class="row sub">
        <div class="col"><%= f.submit 'Invite' %></div>
        <div class="clearfix"></div>
      </div>
  <% end %>
</div>